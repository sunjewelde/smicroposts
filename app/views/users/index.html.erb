<% provide(:title, 'All users') %>
<h1>All users</h1>
<div class="row">
    <div>
        <ul class="col-md-6 col-md-offset-3 media-list">
            <% @users.each do |user| %>
                <li class="media">
                 <%= gravatar_for user, size: 52 %>
                 <%= link_to user.name, user %>
                </li>
            <% end %>
        </ul>
    </div>
</div>